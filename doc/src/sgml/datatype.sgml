<!--
       <entry><literal>'\<replaceable>xxx'</replaceable></literal> (octal value)</entry>
       <entry><literal>'\001'::bytea</literal></entry>
-->
       <entry><literal>'\<replaceable>xxx'</replaceable></literal> (8進数)</entry>
